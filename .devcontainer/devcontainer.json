// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
	"name": "Node.js & TypeScript",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",
	"features": {
		"ghcr.io/devcontainers-extra/features/angular-cli:2": {}
	},
	"mounts": [
		"source=some-numbers-host-node-modules,target=/workspace/host-machine-workspace/node_modules,type=volume",
		"source=some-numbers-host-git-hooks,target=/workspace/host-machine-workspace/.git/hooks,type=volume",
		"source=some-numbers-workspace,target=/workspace/container-workspace,type=volume",
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"Angular.ng-template",
				"mhutchie.git-graph",
				"streetsidesoftware.code-spell-checker",
				"esbenp.prettier-vscode"
			]
		}
	},
	"postCreateCommand": "sudo chown -R $(id -u):$(id -g) ${containerWorkspaceFolder} && sudo apt-get update && sudo apt-get install -y chromium",
	"workspaceFolder": "/workspace/container-workspace",
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspace/host-machine-workspace,type=bind,consistency=cached",
	"onCreateCommand": "(sudo cp /workspace/host-machine-workspace/.devcontainer/post-create.sh /workspace && sudo chown $(id -u):$(id -g) /workspace/post-create.sh && sudo chmod +x /workspace/post-create.sh && /workspace/post-create.sh)",
	"postAttachCommand": "(cd ${containerWorkspaceFolder} && git fetch host -p && git config --global core.editor \"code --wait\")",
	"runArgs": [
		"--publish",
		"0.0.0.0:4200:4200"
	]
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "yarn install",
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}